{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@schemas/*": ["schemas/*"],
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
    }
  },
  "include": ["src"]
}
